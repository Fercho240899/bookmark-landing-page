@import './hero.styl'
@import './header.styl'
@import './features.styl'
@import './download.styl'
@import './questions.styl'
@import './join.styl'
:root
    --softBlue: hsl(231, 69%, 60%)
    --softRed: hsl(0, 94%, 66%)

    --grayishBlue: hsl(229, 8%, 60%)
    --veryDarkBlue: hsl(229, 31%, 21%)
    --lightGray: #e5e5e5
    --wrapperSpace: 1em

body
 //background: lightgray
 font-family: 'Rubik', sans-serif
 color: var(--veryDarkBlue)
 margin: 0
 font-size: 18px

ul
 padding: 0
 margin: 0
 list-style none

.is-hidden
   display: none !important

.u-wrapper
   max-width: 100%
   margin: auto
   padding: 0 1em
    //padding: 0 var(--wrapperSpace);
    //max-width: calc(1115px + 1.5em);
    //margin: auto;
    //width: 100%;
    //box-sizing: border-box;
.u-h1
  font-size: 2em
  font-weight: 500
.u-h2
  @extends .u-h1
  font-size: 1.5em
.u-h4
  @extends .u-h1
  font-size: 1.3em
  margin-top: .5em

.u-p
  color: var(--grayishBlue)
  line-height: 1.8 //espacios de interlineados
  font-size: .9em

.u-button
  background: var(--softBlue)
  color: white
  padding 1em 1em
  font-size .9em
  font-weight: 500
  border-radius: .5em
  margin-left: .5em
  border none
  cursor: pointer
  box-shadow: 0 5px 10px -5px var(--softBlue)
  &:first-of-type
    margin 0
  &.is-red
    color: #f7f7f7
    background: var(--softRed)
  &.is-gray
    color: var(--veryDarkBlue)
    background: #f7f7f7
  &.is-fullWidth
    width: 100%



